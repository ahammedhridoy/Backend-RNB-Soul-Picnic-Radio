datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  email            String    @unique
  name             String
  password         String
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model GeneralUser {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  firstName    String
  lastName     String
  password     String
  imageUrl     String?  @default("/uploads/defaultImage.png")
  agreedToEULA Boolean  @default(false)
  posts        Post[]
  reports      Report[] // <-- Added relation for reported posts
  blockedUsers String[] @default([]) // Store blocked user IDs

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  author   GeneralUser @relation(fields: [authorId], references: [id])
  authorId String      @db.ObjectId
  text     String?
  images   String[]
  likes    String[]    @default([])
  reports  Report[] // <-- Added relation for reported posts

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  post         Post        @relation(fields: [postId], references: [id])
  postId       String      @db.ObjectId
  reporter     GeneralUser @relation(fields: [reporterId], references: [id]) // Bi-directional relation
  reporterId   String      @db.ObjectId
  reason       String
  reportStatus String      @default("pending")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ResetToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  image      String
  title      String
  date       DateTime
  secondDate DateTime?
  url        String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
